@model VendingMachineSystem.Models.Admin.PaginatedList<VendingMachineSystem.Models.TransactionModel.TransactionResponseModel>
@{
    int counter = 0;
}

<h2 class="mb-4">Transaction List</h2>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>No</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model != null)
            {
                @foreach (var user in @Model.Items)
                {
                    counter++;

                    <tr>
                        <td> @counter </td>
                        <td>@user.ProductName</td>
                        <td>@user.Quainty</td>
                        <td>@user.Price</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    @if (Model != null)
    {
        @if (Model.HasPreviousPage)
        {
            <a asp-action="ProductList" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
        }

        <span>Page @Model.PageIndex of @Model.TotalPages</span>

        @if (Model.HasNextPage)
        {
            <a asp-action="ProductList" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
        }
    }
</div>