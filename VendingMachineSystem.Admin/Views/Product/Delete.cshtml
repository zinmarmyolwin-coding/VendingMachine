@model VendingMachineSystem.AppDbContextModels.Product

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <strong>@Model.Name</strong> - @Model.Price
    </div>
</div>

@using (Html.BeginForm("DeleteConfirm", "Product", FormMethod.Post))
{
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ProductList" class="btn btn-secondary">Cancel</a>
}